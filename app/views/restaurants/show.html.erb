<div class="container text-center">
  <h1>Restaurants#show</h1>
  <div class="row">
    <div class="col-md-4 col-lg-12">
      <h2><%= @restaurant.name %></h2>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <p><%= @restaurant.category %></p>
      <br>
    </div>
    <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, restaurant_path(@restaurant),  method: :delete %>
  </div>

  <h1>Reviews</h1>

  <%= link_to '<i class="fa fa-plus" aria-hidden="true"></i>'.html_safe, new_restaurant_review_path(@restaurant) %>
  <%= render 'form2' %>
  <br>
  <% @reviews.each do |review| %>
  <div class="panel panel-default">
    <h4><%= review.content %></h4>
    <p><%= review.rating %></p>
    <br>
  </div>
  <% end %>
  <%= link_to 'Back', restaurants_path %>


</div>
