<%= form_for(@restaurant) do |f| %>
<div class="container">
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.submit :class => 'btn btn-primary' %>
</div>
<% end %>
